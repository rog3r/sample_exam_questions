<div class="navbar navbar-default" style="border-radius: 0" role="navigation">
  <div class="">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Exam Certification', surveys_path, class: "navbar-brand" %>
      <%#= link_to image_tag('logo_sh30.png'), dashboard_path, class: "navbar-brand" %>
      <%#= render 'shared/logo' %>
    </div>

    <div class="nav navbar-nav navbar-right" style="margin-right: 70px; margin-top: 10px; ">
      <% if user_signed_in? %>
          <span class="glyphicon glyphicon-user navbar-link" aria-hidden="true"></span>
          <span class="navbar-link"><%= t('welcome') %></span> <%= link_to "#{current_user.email}", style: 'font-weight: bold;' %>
          <%= link_to('', destroy_user_session_path, method: :delete, data: {confirm: t('confirm_logout'), ok: t('ok'), cancel: t('cancel')},title: 'Logout', class: 'glyphicon glyphicon-log-out btn btn-sm btn-default') %>
      <% end %>
    </div>


  </div>
  <div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
      <li class="<%#= is_active?(surveys_path) %>">
        <%= link_to surveys_path do %>
            All surveys
            <span class='badge'> <%#= surveys_count %> </span>
        <% end -%>
      </li>
    </ul>
  </div>
</div>
</div>





